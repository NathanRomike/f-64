<form>
  <div class="form-group">
    <label for="artist">Artist Name</label>
    {{input value=artist id="artist" class="form-control" type="text" placeholder="Artist Name"}}
  </div>

  <div class="form-group">
    <label for="size">Description</label>
    {{textarea value=description id="description" rows="6" class="form-control" type="text" placeholder="Collection description..."}}
  </div>

  <div class="form-group">
    <label for="name">Collection Name</label>
    {{input value=name id="name" class="form-control" type="text" placeholder="Collection Name"}}
  </div>

  <button {{action 'saveCollection'}} class="btn btn-success">Save Collection!</button>
</form>
